<tr id= 'post_<%= post.id %>'>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', post, class: 'btn btn-outline-info'%></td>
    <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-outline-success' %></td>
    <td><%= link_to 'Destroy', post, data: { confirm: 'Are you sure?', remote: true, method: :delete }, class: 'btn btn-outline-danger' %></td>
</tr>
